# Configuration AgoraFlux Backend
# Copiez ce fichier vers .env et modifiez les valeurs selon votre environnement

# Configuration générale
PROJECT_NAME=AgoraFlux
VERSION=1.0.0
ENVIRONMENT=development
DEBUG=true

# Configuration serveur
HOST=0.0.0.0
PORT=8000

# Configuration CORS (ajoutez vos domaines frontend)
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]

# Configuration base de données
# PostgreSQL (recommandé pour production)
DATABASE_URL=postgresql://postgres:admin@localhost:5432/agoraflux
# SQLite (pour développement rapide)
# DATABASE_URL=sqlite:///./agoraflux.db

# Configuration sécurité (CHANGEZ CES VALEURS EN PRODUCTION!)
SECRET_KEY=votre-cle-secrete-super-forte-changez-moi-absolument

# Configuration logging
LOG_LEVEL=DEBUG
LOG_FILE=logs/agoraflux.log

# Base de données PostgreSQL
POSTGRES_USER=postgres
POSTGRES_PASSWORD=admin
POSTGRES_DB=agoraflux

# pgAdmin
PGADMIN_EMAIL=admin@agoraflux.fr
PGADMIN_PASSWORD=admin

# Authentification JWT
JWT_SECRET_KEY=your-super-secret-jwt-key-here
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30 